# Required safety gate
TRAINING_MODE=true

# MongoDB
MONGODB_URI=mongodb://localhost:27017/dockyard_docs
MONGODB_DB=dockyard_docs

# Firebase client (public)
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com

# Firebase admin (server)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your_project_id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
FIREBASE_STORAGE_BUCKET=your_project.appspot.com

# Intentionally exposed tag for workshop
NEXT_PUBLIC_LAB_INTERNAL_TAG=DOCKYARD_INTERNAL_ONLY
